datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  qr        Qr?      @relation(fields: [qrId], references: [id])
  qrId      String?
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Qr {
  code      String   @unique
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  used      Boolean
  users     User[]
}

model Event {
  closeAt   DateTime
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  openAt    DateTime
  title     DateTime?
  updatedAt DateTime  @updatedAt
}

model Room {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Photo {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  src       String?
  updatedAt DateTime @updatedAt
}

model Promotion {
  createdAt   DateTime  @default(now())
  descripciN  String?
  fechaFin    DateTime?
  fechaInicio DateTime?
  id          String    @id @default(cuid())
  imagen      String?
  Nombre      String?
  updatedAt   DateTime  @updatedAt
}

model Invitation {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}