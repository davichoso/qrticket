datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Qr {
  code      String   @unique
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  used      Boolean
}

model Event {
  closeAt   DateTime?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  openAt    DateTime?
  title     DateTime?
  updatedAt DateTime  @updatedAt
}