datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime       @default(now())
  email     String?
  firstName String?
  gusto     EnumUserGusto?
  id        String         @id @default(cuid())
  lastName  String?
  password  String
  qrid      String?
  qrtxt     String?
  roles     String[]
  updatedAt DateTime       @updatedAt
  username  String         @unique
}

model Qr {
  code      String   @unique
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  used      Boolean
}

model Event {
  closeAt   DateTime
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  openAt    DateTime
  titulo    String?
  updatedAt DateTime @updatedAt
}

model Room {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Photo {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  src       String?
  titulo    String?
  updatedAt DateTime @updatedAt
}

model Promotion {
  createdAt   DateTime  @default(now())
  descripciN  String?
  fechaFin    DateTime?
  fechaInicio DateTime?
  id          String    @id @default(cuid())
  imagen      String?
  Nombre      String?
  updatedAt   DateTime  @updatedAt
}

model Invitation {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  userId    String?
}

model Notification {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  texto     String?
  titulo    String?
  updatedAt DateTime @updatedAt
}

enum EnumUserGusto {
  House
  TechHouse
  Techno
  HardTechno
  Comercial
  Melodico
}